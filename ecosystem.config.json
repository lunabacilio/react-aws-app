{
  "apps": [
    {
      "name": "sticky-notes-app",
      "script": "npm",
      "args": "start",
      "cwd": "/var/www/sticky-notes",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "error_file": "/var/log/pm2/sticky-notes-error.log",
      "out_file": "/var/log/pm2/sticky-notes-out.log",
      "log_file": "/var/log/pm2/sticky-notes-combined.log",
      "time": true
    }
  ]
}
